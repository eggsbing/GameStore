@model GameStore.Core.ViewModels.ProductGroups.GameGroupCreateOrEditVm

@{
    ViewData["Title"] = (Model.Id == 0 ? "Create" : $"Edit {Model.Title}");
}

<h1>@ViewData["Title"]</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@(Model.Id == 0 ? "Create" : "Edit")">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @if (Model.Id != 0)
            {
                <input asp-for="CreateDate" type="hidden" />
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-outline-warning mt-3" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-3" />
                </div>
            }


        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
