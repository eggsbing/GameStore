@model IEnumerable<GameStore.Core.ViewModels.Permissions.ShowRoleVm>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <a asp-action="Add" class="btn btn-primary mb-3">Add</a>

    <div class="row">
        <table class="table table-bordered shadow">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Name)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
